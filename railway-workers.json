{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "apps/workers/Dockerfile",
    "watchPatterns": [
      "/apps/workers/**",
      "/packages/**",
      "/package.json",
      "/turbo.json"
    ]
  },
  "deploy": {
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "region": "us-east"
  }
}