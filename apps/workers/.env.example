# Database
DATABASE_URL=postgresql://storywink:storywink123@localhost:5432/storywink
REDIS_URL=redis://localhost:6379

# Environment
NODE_ENV=development

# OpenAI (for story generation with GPT-4o Vision)
OPENAI_API_KEY=your_openai_api_key_here

# Google AI (for illustration generation with Gemini 2.5 Flash Image)
GOOGLE_API_KEY=your_google_api_key_here

# Cloudinary
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Worker Concurrency (optional - defaults shown)
# Set ILLUSTRATION_CONCURRENCY=1 for debugging to ensure single worker processes all jobs
STORY_CONCURRENCY=2
ILLUSTRATION_CONCURRENCY=3
FINALIZE_CONCURRENCY=2

# Logging
LOG_LEVEL=info