{
  "name": "@storywink/workers",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "esbuild src/index.ts --bundle --platform=node --format=esm --outfile=dist/index.js --packages=external",
    "start": "npm run db:migrate:deploy --workspace=@storywink/database && node dist/index.js",
    "lint": "eslint src --fix",
    "check-types": "tsc --noEmit",
    "clean": "rm -rf dist node_modules .turbo"
  },
  "dependencies": {
    "@google/genai": "^1.30.0",
    "@sparticuz/chromium": "^131.0.1",
    "@storywink/database": "*",
    "@storywink/shared": "*",
    "bullmq": "^5.48.1",
    "cloudinary": "^2.6.0",
    "dotenv": "^16.5.0",
    "dropbox": "^10.34.0",
    "ioredis": "^5.6.1",
    "openai": "^6.10.0",
    "opentype.js": "^1.3.4",
    "pino": "^9.6.0",
    "puppeteer-core": "^24.4.0",
    "sharp": "^0.33.5",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/opentype.js": "^1.3.8",
    "esbuild": "^0.25.5",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  }
}
